<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#E1DFE1"
        card_view:cardElevation="10dp"
        card_view:cardMaxElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/Cont_profile_image"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/kalka"
                app:civ_border_color="#F8F7F7"
                app:civ_border_width="2dp" />

            <!--! second Linear Layout holde the  name and the Message>

                <-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Cont_username"
                    android:layout_width="150dp"
                    android:layout_height="34dp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="#0A0A0A"
                    android:textSize="15dp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:id="@+id/Cont_Status"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:text="Status"
                    android:textColor="#0A0A0A"
                    android:textSize="15dp">


                </TextView>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>